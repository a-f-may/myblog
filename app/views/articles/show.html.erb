<div class="d-flex" style="margin-top:30px">
    <div class="col-9">
            <div class="card mb-5">
                
                    <% if @article.image.attached? %>
                        <%= image_tag @article.image,height:"580px;"%>
                    <% end %>
                
            
            <div class="my-4 card-title">
                <h2><%= @article.title %></h2>
            </div>
            
            <div style="height:500px;">
                <%= @article.content%>
            </div>

        </div>
    </div>
    <%= render "layouts/side"%>
</div>